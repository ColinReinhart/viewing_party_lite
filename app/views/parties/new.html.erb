<h1> New Viewing Party!</h1>

<%= form_with url: "/users/#{@user.id}/movies/#{@movie_id}/viewing_party", method: :post do |f| %>
    <%= f.label :duration, "Duration: " %>
    <%= f.number_field :duration %>
    <%= f.label :date, "Date: " %>
    <%= f.date_field :date %>
    <%= f.label :start_time, "Start Time: " %>
    <%= f.time_field :start_time %>

<p><%= f.label "Invite Users to the Party" %></p>
  <%= select(@users, "Users") do %>
    <% @users.each do |u| %>
    <%= "#{u.name}" %>
  <% end %>
  <% end %>
  <% end %>
